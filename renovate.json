{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update git-cloned dependencies in Dockerfile",
      "managerFilePatterns": ["Dockerfile"],
      "matchStrings": [
        "#\\s*renovate:\\s*datasource=(?<datasource>[a-z-]+?)\\s+depName=(?<depName>[^\\s]+?)\\s+versioning=(?<versioning>[^\\s]+?)\\nARG\\s+\\w+=(?<currentValue>.+)"
      ]
    }
  ]
}
